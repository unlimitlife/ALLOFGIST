<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="0.5dp">

        <TextView
            android:id="@+id/calculator_list_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            tools:text="Require" />

        <TextView
            android:id="@+id/calculator_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_r"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            tools:text="Freshman Seminar" />

        <TextView
            android:id="@+id/calculator_list_credits"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_r"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            tools:text="3" />

        <TextView
            android:id="@+id/calculator_list_grade"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_r"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            tools:text="B0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gist_blue" />
</LinearLayout>