<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/category_box_color_selector"
    android:padding="0.5dp">
    <TextView
        android:id="@+id/calculator_list_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        tools:text="Require"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:textColor="@color/gist_dark_gray"
        android:padding="4dp"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/border_line_gray"/>
    <TextView
        android:id="@+id/calculator_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white"
        tools:text="Freshman Seminar"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:textColor="@color/gist_dark_gray"
        android:padding="4dp"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/border_line_gray"/>
    <TextView
        android:id="@+id/calculator_list_credits"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:text="3"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:textColor="@color/gist_dark_gray"
        android:padding="4dp"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/border_line_gray"/>
    <TextView
        android:id="@+id/calculator_list_grade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:text="B0"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:textColor="@color/gist_dark_gray"
        android:padding="4dp"/>
</LinearLayout>