<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#50000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/white_filed_round_box"
        android:layout_margin="16dp"
        android:paddingTop="25.5dp">
        <TextView
            android:id="@+id/notice_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/blank"
            android:gravity="center"
            tools:text="닉네임을 입력해주세요."
            android:layout_marginTop="12dp"
            android:textColor="@color/warm_grey"
            android:textSize="12.5sp"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blank"
            android:layout_marginTop="25.5dp">
            <TextView
                android:id="@+id/notice_ok_textview"
                android:layout_width="92.5dp"
                android:layout_height="33dp"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center"
                android:background="@drawable/ok_button_blue_grad"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>