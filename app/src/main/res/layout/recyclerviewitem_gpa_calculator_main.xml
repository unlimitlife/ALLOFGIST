<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blank"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:id="@+id/layout_gpa_item"
        android:layout_width="335dp"
        android:layout_height="87dp"
        android:orientation="horizontal"
        android:background="@drawable/log_box_selector_gpa_calculator"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="181.8dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blank">
            <TextView
                android:id="@+id/title_log_gpa_calculator"
                android:layout_width="90dp"
                android:layout_height="11dp"
                android:fontFamily="@font/nanumsquare_r"
                android:textSize="10sp"
                android:textColor="@color/warm_grey"
                tools:text="2019학년도 1학기"
                android:layout_marginTop="11dp"
                android:layout_marginStart="13.5dp"
                android:background="@color/blank"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="34dp"
                    android:background="@color/blank">
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="16dp"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textSize="12.5sp"
                        android:textColor="#bababa"
                        android:layout_marginEnd="8dp"
                        android:background="@color/blank"
                        android:gravity="end"
                        android:text="전공 이수 학점"/>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/warm_grey"
                        android:layout_marginEnd="6dp"/>
                    <TextView
                        android:id="@+id/major_num_log_gpa_calculator"
                        android:layout_width="19dp"
                        android:layout_height="16dp"
                        android:textSize="12.5sp"
                        android:textColor="@color/warm_grey"
                        android:fontFamily="@font/nanumsquare_r"
                        android:background="@color/blank"
                        tools:text="12"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="34dp"
                    android:background="@color/blank">
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="16dp"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textSize="12.5sp"
                        android:textColor="#bababa"
                        android:layout_marginEnd="8dp"
                        android:background="@color/blank"
                        android:text="총 이수 학점"
                        android:gravity="end"/>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/warm_grey"
                        android:layout_marginEnd="6dp"/>
                    <TextView
                        android:id="@+id/total_credit_log_gpa_calculator"
                        android:layout_width="19dp"
                        android:layout_height="16dp"
                        android:textSize="12.5sp"
                        android:textColor="@color/warm_grey"
                        android:background="@color/blank"
                        android:fontFamily="@font/nanumsquare_eb"
                        tools:text="18"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="67dp"
            android:layout_gravity="center_vertical"
            android:background="#bababa"
            />
        <LinearLayout
            android:layout_width="152.8dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/blank">
            <TextView
                android:id="@+id/gpa_log_gpa_calculator"
                android:layout_width="85dp"
                android:layout_height="47dp"
                android:textSize="36sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/warm_grey"
                android:fontFamily="@font/nanumsquare_b"
                tools:text="3.58"
                android:layout_gravity="center_vertical"
                android:background="@color/blank"
                android:layout_marginStart="20dp"/>
            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:textSize="14sp"
                    android:textColor="#a2a2a2"
                    android:layout_gravity="bottom"
                    android:background="@color/blank"
                    android:layout_marginBottom="8dp"
                    android:text="/4.5"
                    tools:text="/4.5"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="end">
        <ImageButton
            android:id="@+id/log_item_delete_gpa"
            android:visibility="gone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/blank"
            android:src="@drawable/close_white_bluebackg"/>
    </LinearLayout>
</FrameLayout>