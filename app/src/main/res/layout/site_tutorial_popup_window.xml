<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcademicCalendarActivity"
    android:background="@color/white_gray">

    <RelativeLayout
        android:id="@+id/top_window_bar_websites_tutorial"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow">

        <ImageButton
            android:id="@+id/websites_tutorial_back_button"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12.5dp"
            android:background="@color/white"
            android:src="@drawable/clear_back_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_toRightOf="@id/websites_tutorial_back_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/allsite_tutorial_main"
                android:textSize="17.5sp"
                android:gravity="center"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@color/warm_grey"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_site_tuorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_window_bar_websites_tutorial"/>

</RelativeLayout>