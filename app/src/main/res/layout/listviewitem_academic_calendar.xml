<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/blue_corner_box"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/academic_cal_blue_grad_box"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp">
        <TextView
            android:id="@+id/diary_compelete_date_textview_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="06. 17"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/diary_compelete_date_textview_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_b"
            android:textColor="@color/white"
            android:textSize="12sp"
            tool:text="~08. 16" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="32dp"
        android:background="@color/blank">
        <TextView
            android:id="@+id/diary_context_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nanumsquare_r"
            tool:text="내용 없음"
            android:textColor="@color/warm_grey"
            android:textSize="14sp"
            android:background="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>