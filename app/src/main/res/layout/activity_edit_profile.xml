<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcademicCalendarActivity"
    android:background="@color/white_gray">

    <RelativeLayout
        android:id="@+id/top_window_bar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow">

        <ImageButton
            android:id="@+id/edit_profile_back_button"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_marginStart="12.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:src="@drawable/close_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_toEndOf="@id/edit_profile_back_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/title_edit_profile"
                android:textSize="20sp"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@color/warm_grey"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/profile_my"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/top_window_bar_edit_profile"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="32dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/nickname_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="1dp"
                android:textSize="25sp"
                android:textColor="#6c6c6c"
                tools:text="홍길동"
                android:fontFamily="@font/nanumsquare_r"
                android:paddingEnd="25dp"/>
            <ImageButton
                android:id="@+id/profile_id_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="4dp"
                android:background="@color/white_gray"
                android:src="@drawable/close_edit_profile"/>


        </FrameLayout>
        <TextView
            android:id="@+id/size_of_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/gist_blue"
            tools:text="11/20"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_gravity="bottom"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_edit_check_selector"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/check_main"
            android:textColor="@drawable/my_text_color_selector"
            android:fontFamily="@font/nanumsquare_r"/>

    </LinearLayout>
</RelativeLayout>