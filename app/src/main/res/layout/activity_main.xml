    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/advertisement_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/between_advertisement_schedule"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:layout_below="@id/top_window_bar"
        android:background="@drawable/category_box_unselected_design"/>
    <View
        android:id="@+id/between_advertisement_schedule"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_gray"
        android:layout_above="@id/schedule_entire_layout"/>

    <LinearLayout
        android:id="@+id/schedule_entire_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_above="@id/between_schedule_favorite"
        android:background="@drawable/category_box_unselected_design"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/schedule_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textColor="@color/gist_dark_gray"
            android:background="#FFFFFF"/>

        <ListView
            android:id="@+id/schedule_preview"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
    </LinearLayout>

    <View
        android:id="@+id/between_schedule_favorite"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_gray"
        android:layout_above="@id/favorite_entire_layout"/>

    <LinearLayout
        android:id="@+id/favorite_entire_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_above="@id/category_table_above"
        android:background="@drawable/category_box_unselected_design"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/favorite_site_main"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/gist_dark_gray"
            android:background="#FFFFFF"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/favorite_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/favorite_notice_main"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/favorite_notice_main"
                android:textSize="14sp"
                android:textColor="@color/gist_light_gray"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"/>

        </FrameLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/category_table_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        android:layout_above="@id/category_table_below">
        <TableRow
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/category_calendar"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diary_main"
                        android:background="@drawable/category_box_element_color_selector"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/category_allsite"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/allsite_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allsite_main"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/category_food_diary"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food_diary_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/food_diary_main"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/category_table_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">
        <TableRow
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/category_anonymous_forum"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/notice_board_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_box_element_color_selector"
                        android:text="@string/anonymous_forum_main"
                        android:textColor="@color/gist_dark_gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/category_favorite_setting"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/favorite_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_setting_main"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/category_advertisement"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/advertisement_red"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/advertisement_main"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>