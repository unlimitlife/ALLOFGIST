<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    tools:context=".MainActivity"
    android:id="@+id/fullscreen">
    <!--
    android:background="#75000000"-->
    <RelativeLayout
        android:id="@+id/top_window_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/category_box_unselected_design">
        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageButton
                android:id="@+id/userButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user_information_red"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_toEndOf="@id/user_layout"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/title_main"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/title_main"
                android:textSize="20sp"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:textColor="@color/gist_red"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageButton
                android:id="@+id/logout_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout_red"
                android:background="@color/white"/>

            <!--<ImageButton
                android:id="@+id/tutorialButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tutorial_mark_red"
                android:background="@color/white"/>-->

        </LinearLayout>
    </RelativeLayout>
