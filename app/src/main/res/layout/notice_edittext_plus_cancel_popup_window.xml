<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#50000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/notice_edittext_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            tools:text="닉네임 변경"
            android:layout_marginTop="12dp"
            android:textColor="@color/gist_dark_gray"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:layout_marginStart="24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/notice_edittext_nickname"
            android:hint="@string/edittext_nickname_hint_signup"
            android:inputType="text"
            android:textSize="15sp"
            android:textColorHint="@color/gist_light_gray"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:background="@drawable/sign_up_box_layout_design"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="24dp"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="32dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/notice_edittext_cancel_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/gist_red"
                android:background="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/notice_edittext_ok_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textColor="@color/gist_red"
                android:background="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>