<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_gray"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top_window_bar_websites_tutorial"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow">

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="42.5dp"
                android:layout_height="42.5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12.5dp"
                android:background="@color/white"
                android:src="@drawable/clear_back_blue" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/clear"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:fontFamily="@font/nanumsquare_b"
                    android:gravity="center"
                    android:text="일정 추가하기"
                    android:textColor="@color/warm_grey"
                    android:textSize="17.5sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/blank" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="23.5dp"
                android:layout_marginEnd="22.5dp"
                android:src="@drawable/pencil_blue" />

            <EditText
                android:id="@+id/edit_diary"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:layout_gravity="center"
                android:background="@drawable/blue_corner_little_round_box"
                android:hint="일정을 입력하세요."
                android:inputType="text"
                android:fontFamily="@font/nanumsquare_r"
                android:paddingStart="16dp"
                android:textColor="@color/warm_grey"
                android:textColorHint="#a2a2a2"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/blank" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:background="@color/white_gray"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="23.5dp"
                android:layout_marginEnd="22.5dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/clock_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_corner_little_round_box"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blank"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blank"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="완료일"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textColor="#a2a2a2"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/datebutton"
                        android:layout_width="match_parent"
                        android:layout_height="46.5dp"
                        android:background="@color/blank"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textColor="@color/warm_grey" />

                    <DatePicker
                        android:id="@+id/datepicker"
                        android:layout_width="256.5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-30dp"
                        android:layout_marginBottom="-30dp"
                        android:background="@color/blank"
                        android:fontFamily="@font/nanumsquare_r"
                        android:calendarTextColor="@color/warm_grey"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/blank" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/blank">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blank"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="완료시간"
                        android:textColor="#a2a2a2"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/timebutton"
                        android:layout_width="match_parent"
                        android:layout_height="46.5dp"
                        android:background="@color/blank"
                        android:fontFamily="@font/nanumsquare_r"
                        android:textColor="@color/warm_grey" />

                    <TimePicker
                        android:id="@+id/timepicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-30dp"
                        android:layout_marginBottom="-30dp"
                        android:amPmTextColor="@color/warm_grey"
                        android:background="@color/blank"
                        android:numbersTextColor="@color/warm_grey"
                        android:fontFamily="@font/nanumsquare_r"
                        android:timePickerMode="spinner"
                        android:visibility="gone" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/blank" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
