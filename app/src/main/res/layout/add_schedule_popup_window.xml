                                android:textColor="@drawable/alarm_button_text_color_selector"
                                android:gravity="center"
                                android:text="12시간 전" />

                            <Button
                                android:id="@+id/oneday_ago"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/alarm_button_color_selector"
