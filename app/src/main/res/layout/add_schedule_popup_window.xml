                                android:background="@drawable/alarm_button_color_selector"
                                android:textColor="@drawable/alarm_button_text_color_selector"
                                android:gravity="center"
                                android:text="15분 전" />
                        </TableRow>

                        <TableRow>

                            <Button
                                android:id="@+id/thirteenminute_ago"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/alarm_button_color_selector"
                                android:textColor="@drawable/alarm_button_text_color_selector"
                                android:gravity="center"
                                android:text="30분 전" />

                            <Button
                                android:id="@+id/onehour_ago"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/alarm_button_color_selector"
                                android:textColor="@drawable/alarm_button_text_color_selector"
                                android:gravity="center"
                                android:text="1시간 전" />

                            <Button
                                android:id="@+id/twohour_ago"
                                android:layout_height="60dp"
