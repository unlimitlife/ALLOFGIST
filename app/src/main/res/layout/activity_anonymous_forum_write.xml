<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnonymousForumActivity_Write">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF7F00">
        <ImageButton
            android:id="@+id/write_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_white"
            android:background="#FF7F00"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"/>
        <Button
            android:id="@+id/write_submit_button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="@string/submit_button"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:background="@drawable/forum_write_button_design"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="닉네임으로 게시할까요?"
                android:background="#FFFFFF"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="bottom"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:textColor="#a3a3a3"
                android:text="미선택시, 닉네임 대신 '익명'으로 게시됩니다."/>
        </LinearLayout>
        <Switch
            android:id="@+id/nickname_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#FF7F00"
            android:background="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF7F00"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:hint="게시자"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#a3a3a3"
            android:text="익명"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF7F00"/>
    <EditText
        android:id="@+id/write_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:paddingLeft="16dp"
        android:hint="제목"
        android:inputType="text"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF7F00"/>
    <EditText
        android:id="@+id/write_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:background="#FFFFFF"
        android:gravity="top|left"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="#000000"
        android:textSize="15sp" />
</LinearLayout>