<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnonymousForumActivity_Preview_Bestview"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_window_bar_bestview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@color/gist_blue">

        <ImageButton
            android:id="@+id/bestview_back_button"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12.5dp"
            android:background="@color/gist_blue"
            android:src="@drawable/clear_back_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_toRightOf="@id/bestview_back_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="인기글 게시판"
                android:textSize="17.5sp"
                android:gravity="center"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@color/white"
                android:background="@color/gist_blue"/>
        </LinearLayout>
    </RelativeLayout>


    <com.allofgist.dell.allofgistlite.NonSwipeableViewPager
        android:id="@+id/anonymous_forum_preview_bestview_switch_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="fragment_container"
        android:background="#E4E4E4"/>

</LinearLayout>