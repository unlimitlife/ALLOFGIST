<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_base_layout_design"
    tools:context=".AnonymousForum_OverviewFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/anonymous_forum_preview_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/anonymous_forum_preview_content_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"/>
            <ProgressBar
                android:id="@+id/anonymous_forum_preview_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/ring_progress_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:indeterminate="true"
                android:indeterminateDuration="650"/>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>