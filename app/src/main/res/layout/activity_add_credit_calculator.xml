<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gist_red">

        <TextView
            android:id="@+id/title_textView_add_calculator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/calculator_add_popup_title"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/save_calculator"
            android:background="@color/white_gray" />

        <Button
            android:id="@+id/save_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/gist_red"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:text="@string/calculator_add_popup_save"
            android:textColor="@color/white_gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/white_gray"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/calculator_add_popup_input_type"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/type_add_calculator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/category_box_unselected_design"/>
            <Button
                android:id="@+id/calculator_type_reload_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/red_solid_box"
                android:text="불러오기"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/white_gray"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/calculator_add_popup_input_title"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/title_add_calculator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/category_box_unselected_design"/>
            <Button
                android:id="@+id/calculator_title_reload_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/red_solid_box"
                android:text="불러오기"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/white_gray"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/calculator_add_popup_input_grade"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/grade_add_calculator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/category_box_unselected_design"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/white_gray"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/calculator_add_popup_input_credits"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/credits_add_calculator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="15sp"
                android:textColor="@color/gist_dark_gray"
                android:fontFamily="@font/noto_sans"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@drawable/category_box_unselected_design"/>
        </LinearLayout>

        <Button
            android:id="@+id/delete_calculator"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gist_red"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:text="@string/delete_forum"
            android:textColor="@color/white_gray"
            android:layout_marginTop="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_gravity="center"
            android:textSize="15sp" />
    </LinearLayout>




</LinearLayout>