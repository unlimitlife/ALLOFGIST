<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcademicCalendarActivity"
    android:background="@color/white_gray">

    <RelativeLayout
        android:id="@+id/top_window_bar_food_diary"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow">

        <ImageButton
            android:id="@+id/food_diary_back_button"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12.5dp"
            android:background="@color/white"
            android:src="@drawable/back_button_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/title_food_diary"
                android:textSize="17.5sp"
                android:gravity="center"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@color/warm_grey"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_window_bar_food_diary"
        android:layout_above="@id/category_table_below"
        android:background="@color/white_gray">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/image_food_diary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_gray"
            android:padding="0.5dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/notice_food_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notice_food_diary"
            android:textSize="14sp"
            android:textColor="@color/gist_light_gray"
            android:fontFamily="@font/nanumsquare_r"
            android:gravity="center"
            android:background="#00FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>
        <ProgressBar
            android:id="@+id/food_diary_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/ring_progress_dialog"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateDuration="650"/>
    </FrameLayout>
    <TableLayout
        android:id="@+id/category_table_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_corner_box"
        android:layout_alignParentBottom="true">
        <TableRow
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/first_floor"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/blue_box_selector"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blank"
                    android:text="@string/first_restaurant_first_floor"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/food_diary_text_color_selector"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquare_b"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/second_floor"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/blue_box_selector"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_restaurant_second_floor"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/food_diary_text_color_selector"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquare_b"
                    android:background="@color/blank"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/second_restaurant"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/blue_box_selector"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second_restaurant"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/food_diary_text_color_selector"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquare_b"
                    android:background="@color/blank"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"/>

</RelativeLayout>