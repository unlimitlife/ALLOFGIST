<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_gray"
    tools:context=".FoodDiary">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_gray">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/image_food_diary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/category_box_unselected_design"
            android:layout_margin="13dp"
            android:padding="0.5dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/notice_food_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notice_food_diary"
            android:textSize="14sp"
            android:textColor="@color/gist_light_gray"
            android:gravity="center"
            android:background="#00FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>
        <ProgressBar
            android:id="@+id/food_diary_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/ring_progress_dialog"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateDuration="650"/>
    </FrameLayout>
    <TableLayout
        android:id="@+id/category_table_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">
        <TableRow
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/first_floor"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food_select_red_1"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_box_element_color_selector"
                        android:text="@string/first_restaurant_first_floor"
                        android:textColor="@color/gist_dark_gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/second_floor"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food_select_red_2"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_restaurant_second_floor"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/second_restaurant"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:background="@drawable/category_box_color_selector"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:background="@drawable/category_box_element_color_selector"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food_diary_red"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/category_box_element_color_selector"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/second_restaurant"
                        android:textSize="12sp"
                        android:textColor="@color/gist_dark_gray"
                        android:textStyle="bold"
                        android:background="@drawable/category_box_element_color_selector"/>
                </LinearLayout>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e4e4e4"/>


</LinearLayout>