<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tutorial"
    android:background="@color/white_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shadow">

        <ImageButton
            android:id="@+id/favorite_setting_back_button"
            android:layout_width="42.5dp"
            android:layout_height="42.5dp"
            android:layout_marginStart="12.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:src="@drawable/close_blue" />

        <TextView
            android:id="@+id/title_textView_add_calculator"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:textColor="@color/warm_grey"
            android:fontFamily="@font/nanumsquare_r"
            android:text="즐겨찾기 관리하기"
            android:layout_toRightOf="@id/favorite_setting_back_button"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_favorite_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white_gray"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/warm_grey"
        app:tabSelectedTextColor="@color/gist_blue"
        app:tabRippleColor="@null"
        app:tabIndicatorHeight="0dp"
        app:tabTextAppearance="@style/tab_text"
        app:tabBackground="@color/white_gray"
        android:layout_marginTop="26.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/favorite_setting_switch_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="39dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white_gray"
        android:layout_marginBottom="37dp">

        <Button
            android:id="@+id/favorite_setting_ok_button"
            android:layout_width="250dp"
            android:layout_height="46.5dp"
            android:text="@string/calculator_add_popup_save"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:background="@drawable/blue_filed_round_box"
            />
    </LinearLayout>

</LinearLayout>